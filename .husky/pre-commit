#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for staged files
npx lint-staged

# Run type check
npm run type-check

# Ensure no sensitive data is being committed
if grep -r "sk-ant-" . --exclude-dir=node_modules --exclude-dir=.git --exclude-dir=.next; then
  echo "❌ Found potential API keys in staged files!"
  echo "Please remove any API keys before committing."
  exit 1
fi

if grep -r "ANTHROPIC_API_KEY.*=" . --exclude-dir=node_modules --exclude-dir=.git --exclude-dir=.next --exclude=".env.example"; then
  echo "❌ Found potential API key assignments in staged files!"
  echo "Please ensure API keys are only in environment files."
  exit 1
fi

echo "✅ Pre-commit checks passed!"