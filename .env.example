# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/claude_web_ui"
REDIS_URL="redis://localhost:6379"

# Security Keys (Generate secure keys for production)
ENCRYPTION_KEY="your-32-character-encryption-key-here"
JWT_SECRET="your-jwt-secret-key-here"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Claude Code Configuration
CLAUDE_CODE_PATH="claude"
CLAUDE_PROCESS_TIMEOUT=300000
MAX_CONCURRENT_SESSIONS=100

# Authentication Options (Choose one or more)
# For API Key authentication
ANTHROPIC_API_KEY="sk-your-api-key-here"

# For Claude Pro/Max subscriptions
CLAUDE_USE_PRO=false
CLAUDE_USE_MAX=false

# For Enterprise deployments
CLAUDE_CODE_USE_BEDROCK=false
CLAUDE_CODE_USE_VERTEX=false

# AWS Configuration (if using Bedrock)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Google Cloud Configuration (if using Vertex AI)
GOOGLE_CLOUD_PROJECT="your-gcp-project-id"
GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# Development Configuration
NODE_ENV="development"
PORT=3000
HOST="localhost"

# Logging
LOG_LEVEL="info"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,https://your-domain.com"

# WebSocket Configuration
WS_PORT=3001

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="./uploads"

# Session Configuration
SESSION_SECRET="your-session-secret-key"
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Testing (for test environment)
TEST_DATABASE_URL="postgresql://test:test@localhost:5433/claude_web_ui_test"
TEST_REDIS_URL="redis://localhost:6380"